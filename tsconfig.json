{
  "compilerOptions": {
    "allowJs": true,
    "module": "es6",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "jsx": "react-jsx",
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "*": ["*"],
      "components": ["./src/components/"],
      "hooks": ["./src/hooks/"],
      "utils": ["./src/utils/"],
      "themes": ["./src/themes/"],
      "types": ["./src/types/"],
      "consts": ["./src/constants/"],
      "config": ["./src/config/"],
      "context": ["./src/context/"]
    },
    "lib": ["es2021", "dom"],
    "target": "es2021"
  },
  "include": ["src/**/*", "decs.d.ts"]
}
